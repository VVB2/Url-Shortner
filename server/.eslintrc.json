{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "semi": ["error", "never"],
        "no-empty": "warn",
        "no-cond-assign": ["error", "always"],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }],
        "curly": "error",
        "array-bracket-spacing": ["error", "always"],
        "object-curly-spacing": ["error", "always"],
        "key-spacing": ["error", {
        "align": {
            "beforeColon": true,
            "afterColon": true,
            "on": "colon"
        }
        }],
        "space-infix-ops": "error",
        "no-unused-vars": "warn",
        "comma-spacing": ["error", { "before": false, "after": true }]
    }
}
